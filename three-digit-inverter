/* Inverts a three digit number*/ 

#include <stdio.h>

int main(void)
{
    int input, n1, n2, n3;
    
    printf ("Please enter a three digit number: ");
    scanf ("%d", &input);
    
    n3 = input / 100;
    input %= 100;
    n2 = input / 10;
    n1 = input % 10;
    
    printf ("The inverted number is : %d%d%d", n1, n2, n3);
    
    return 0;
}
